{
  "name": "poody-toons",
  "private": true,
  "packageManager": "npm@10.9.2",
  "type": "module",
  "workspaces": [
    "apps/web",
    "packages/ui",
    "packages/games",
    "packages/config",
    "packages/assets",
    "tools/*"
  ],
  "scripts": {
    "dev": "turbo run dev --parallel",
    "build": "turbo run build --parallel",
    "lint": "turbo run lint",
    "typecheck": "turbo run typecheck",
    "test": "turbo run test",
    "e2e": "turbo run e2e",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "devDependencies": {
    "@axe-core/cli": "^4.10.2",
    "@playwright/test": "^1.40.1",
    "@types/node": "^24.3.0",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "^8.21.0",
    "@typescript-eslint/parser": "^8.21.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^9.18.0",
    "husky": "^9.0.10",
    "lighthouse": "^12.8.1",
    "lint-staged": "^15.2.2",
    "normalize-path": "^3.0.0",
    "postcss": "^8.4.31",
    "prettier": "^3.4.2",
    "tailwindcss": "^3.4.1",
    "turbo": "^2.3.4",
    "typescript": "^5.2.2",
    "vitest": "^1.2.2"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx,json,css,md}": "prettier --write"
  }
}
